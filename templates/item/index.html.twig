{% extends 'base.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
      
  <div class="card-body">
   
    <a href="{{ path('item_new') }}">Create new</a>
    
    <div class="col-lg-11 col-md-12">
      <div class="card">
        <div class="card-header card-header-info">
          <h4 class="card-title">Employees Stats</h4>
          <p class="card-category">New employees on 15th September, 2016</p>
        </div>
        <div class="card-body table-responsive">

            <table class="table table-hover">
                <thead class="text-Dark">
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Label</th>
                <th>Create_At</th>
                <th>Update_At</th>
                <th>Path</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.code }}</td>
                <td>{{ item.label }}</td>
                <td>{{ item.CreateAt ? item.CreateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ item.updateAt ? item.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ item.path }}</td>
                <td>{{ item.icon }}</td>
                <td>
                    <a href="{{ path('item_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('item_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
</div>
</div>
</div>

{% endblock %}
