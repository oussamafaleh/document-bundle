{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}

<div class="card-body">
                 
    <div class="col-lg-11 col-md-12">
      <div class="card">
        <div class="card-header card-header-primary">
          <h4 class="card-title">Employees Stats</h4>
          <p class="card-category">New employees on 15th September, 2016</p>
        </div>
        <div class="card-body table-responsive">

            <table class="table table-hover">
                <thead class="text-warning">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ item.code }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ item.label }}</td>
            </tr>
            <tr>
                <th>Create_At</th>
                <td>{{ item.CreateAt ? item.CreateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_At</th>
                <td>{{ item.updateAt ? item.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ item.path }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ item.icon }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('item_index') }}">back to list</a>

    <a href="{{ path('item_edit', {'id': item.id}) }}">edit</a>

    {{ include('item/_delete_form.html.twig') }}

</div>
</div>
</div>
</div>
{% endblock %}
